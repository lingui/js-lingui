{
  "private": true,
  "author": {
    "name": "Tomáš Ehrlich",
    "email": "tomas.ehrlich@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "test:unit": "JEST_JUNIT_OUTPUT=results/unit.xml jest --no-cache packages/",
    "test:integration": "JEST_JUNIT_OUTPUT=results/integration.xml jest --no-cache examples/",
    "test": "npm run test:unit; npm run test:integration",
    "watch:unit": "jest --watch packages/",
    "watch:integration": "jest --watch examples/",
    "watch": "jest --watch packages/ examples/",
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "publish": "lerna publish --conventional-commits -m 'chore(release): publish [ci skip]' --registry=https://registry.npmjs.org/",
    "lint:flow": "flow",
    "lint:eslint": "eslint packages/",
    "lint": "npm run lint:eslint; npm run lint:flow",
    "add": "all-contributors add",
    "generate": "all-contributors generate",
    "prettier": "prettier --write 'packages/**/*.js' > /dev/null",
    "precommit": "npm run prettier"
  },
  "engines": {
    "node": ">=5.0"
  },
  "devDependencies": {
    "all-contributors-cli": "^4.8.1",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.1.1",
    "babel-generator": "^6.25.0",
    "babel-jest": "^22.0.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-resolver": "^1.1.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-remove-strict-mode": "^0.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chalk": "^2.3.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.14.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.61.0",
    "flow-typed": "^2.2.3",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "jest-junit": "^3.3.0",
    "lerna": "^2.5.1",
    "memory-fs": "^0.4.1",
    "mock-fs": "^4.4.2",
    "nixt": "^0.5.0",
    "node-emoji": "^1.6.1",
    "prettier": "^1.8.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.53.0",
    "rollup-plugin-babel": "^3.0.2",
    "tmp": "^0.0.33",
    "webpack": "^3.8.1"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lingui/js-lingui.git"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)test.js",
      "**/test/index.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/locale/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "scripts",
      "dist",
      "locale"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "setupTestFrameworkScriptFile": "./scripts/jest-env.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "roots": [
      "packages/",
      "examples/"
    ],
    "testResultsProcessor": "jest-junit",
    "transformIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "targets": {
            "node": 4,
            "browsers": "> 1%, last 2 versions"
          },
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties",
      "external-helpers",
      "transform-runtime"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  }
}
