{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "noEmit": true,
    "baseUrl": "./",
    "pretty": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "paths": {
      "@lingui/babel-plugin-extract-messages": ["./packages/babel-plugin-extract-messages/src"],
      "@lingui/core": ["./packages/core/src"],
      "@lingui/core/compile": ["./packages/core/src/compile/index.ts"],
      "@lingui/cli/api": ["./packages/cli/src/api"],
      "@lingui/react": ["./packages/react/src"],
      "@lingui/conf": ["./packages/conf/src"],
      "@lingui/macro": ["./packages/macro/src"]
    }
  },
  "exclude": [
    "examples/js",
    "examples/next-js",
    "examples/create-react-app",
    "build",
    "website",
    "**/fixtures/**"
  ]
}
