{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": "./",
    "pretty": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2017"
  },
  "exclude": ["examples/**", "dist", "website", "**/fixtures/**"]
}
