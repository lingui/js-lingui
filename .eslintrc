{
  "root": true,
  "env": {
    "jest/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [],
  "plugins": ["promise", "jest", "@typescript-eslint", "import"],
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "rules": {
    "@typescript-eslint/consistent-type-definitions": ["error", "type"],
    "import/no-extraneous-dependencies": ["error", {"includeTypes": true}]
  }
}
